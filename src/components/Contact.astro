---
const rawBase = import.meta.env.BASE_URL ?? '/';
const basePath = rawBase === '/' ? '' : rawBase.replace(/\/$/, '');
const actionUrl = `${basePath}/contacto.php`;

const status = Astro.url.searchParams.get('status');
const statusMessages: Record<string, { type: 'success' | 'error', text: string }> = {
  success: { type: 'success', text: '¡Mensaje enviado exitosamente! Nos pondremos en contacto contigo pronto.' },
  missing_fields: { type: 'error', text: 'Por favor completa todos los campos obligatorios.' },
  invalid_email: { type: 'error', text: 'El correo electrónico ingresado no es válido.' },
  mail_failed: { type: 'error', text: 'No se pudo enviar el mensaje. Por favor intenta nuevamente o contáctanos por teléfono.' },
};
const statusData = status ? statusMessages[status] : null;
---

<section id="contacto" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="font-bold text-title mb-4" style="font-size: 2.2em;">Contáctanos</h2>
        <div class="w-24 h-1 bg-primary mx-auto mb-6"></div>
        <p class="text-xl text-paragraph">
          Estamos listos para ayudarte con tu próximo proyecto
        </p>
      </div>

      <div class="grid md:grid-cols-9 gap-12">
        <div class="md:col-span-4">
          <h3 class="text-2xl font-bold text-title mb-6">Información de Contacto</h3>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-title mb-1">Dirección</h4>
                <p class="text-paragraph">Serrano #920, Pudahuel<br>Santiago - Chile</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-title mb-1">Email</h4>
                <a href="mailto:contacto@sergenspa.cl" class="text-primary hover:text-primary-dark transition-colors">contacto@sergenspa.cl</a><br>
                <a href="mailto:fernando@sergenspa.cl" class="text-primary hover:text-primary-dark transition-colors">fernando@sergenspa.cl</a>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-title mb-1">Teléfonos</h4>
                <a href="tel:+56985495278" class="text-primary hover:text-primary-dark transition-colors">+56 9 8549 5278</a><br>
                <a href="tel:+56965121778" class="text-primary hover:text-primary-dark transition-colors">+56 9 6512 1778</a>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-title mb-1">Sitio Web</h4>
                <a href="https://www.sergenspa.cl" target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-dark transition-colors">www.sergenspa.cl</a><br>
                <a href="https://www.sgn.cl" target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-dark transition-colors">www.sgn.cl</a>
              </div>
            </div>
          </div>

          <div class="mt-8 p-6 bg-gray-light rounded-xl">
            <h4 class="font-bold text-title mb-3">Horario de Atención</h4>
            <p class="text-paragraph">Lunes a Viernes: 9:00 - 18:00</p>
            <p class="text-paragraph">Sábado: 9:00 - 13:00</p>
          </div>
        </div>

        <div class="md:col-span-5 bg-gray-light rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-title mb-6">Envíanos un Mensaje</h3>
          
          {statusData && (
            <div class={`rounded-lg px-5 py-4 mb-6 ${
              statusData.type === 'success' 
                ? 'bg-green-50 border border-green-200 text-green-800' 
                : 'bg-red-50 border border-red-200 text-red-800'
            }`}>
              {statusData.text}
            </div>
          )}
          
          <form 
            id="contact-form"
            class="space-y-6"
            action={actionUrl}
            method="POST"
          >
            <input type="text" name="_gotcha" class="hidden" tabindex="-1" autocomplete="off" />
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-title mb-2">Nombre Completo</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors"
                  placeholder="Tu nombre"
                />
              </div>

              <div>
                <label for="empresa" class="block text-sm font-semibold text-title mb-2">Empresa</label>
                <input 
                  type="text" 
                  id="empresa" 
                  name="empresa"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors"
                  placeholder="Nombre de tu empresa"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-semibold text-title mb-2">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors"
                  placeholder="tu@email.com"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-semibold text-title mb-2">Teléfono</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors"
                  placeholder="+56 9 1234 5678"
                />
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-title mb-2">Mensaje</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors resize-none"
                placeholder="Cuéntanos sobre tu proyecto..."
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full bg-primary hover:bg-primary-dark text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors shadow-lg hover:shadow-xl"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
