---

<section id="servicios" class="py-20 bg-gray-light">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="font-bold text-title mb-4" style="font-size: 2.2em;">Nuestros Servicios de Fabricación</h2>
        <div class="w-24 h-1 bg-primary mx-auto mb-6"></div>
        <p class="text-xl text-paragraph max-w-3xl mx-auto">
          Ofrecemos soluciones integrales para proyectos industriales con los más altos estándares de calidad
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {services.map((service) => (
          <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="relative h-48 overflow-hidden">
              <img 
                src={service.image} 
                alt={service.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              <div class="absolute bottom-4 left-4 right-4">
                <h3 class="text-xl font-bold text-white drop-shadow-lg">{service.title}</h3>
              </div>
            </div>
            <div class="p-6">
              <p class="text-paragraph mb-6 leading-relaxed text-sm">{service.description}</p>
              <ul class="space-y-2.5">
                {service.features.map((feature) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-paragraph text-sm">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="px-6 pb-6">
              <button class="w-full bg-primary/5 hover:bg-primary hover:text-white text-primary font-semibold py-3 rounded-lg transition-all duration-300 border border-primary/20 hover:border-primary">
                Más Información
              </button>
            </div>
          </div>
        ))}
      </div>

      <!-- SECCIÓN: NUESTROS SERVICIOS -->
      <div id="nuestros-servicios" class="text-center mb-16 mt-20">
        <h2 class="font-bold text-title mb-4" style="font-size: 2.2em;">Nuestros Servicios</h2>
        <div class="w-24 h-1 bg-primary mx-auto mb-6"></div>
        <p class="text-xl text-paragraph max-w-3xl mx-auto">
          Servicios especializados para la industria
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {serviciosAdicionales.map((service) => (
          <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="relative h-48 overflow-hidden">
              <img 
                src={service.image} 
                alt={service.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              <div class="absolute bottom-4 left-4 right-4">
                <h3 class="text-xl font-bold text-white drop-shadow-lg">{service.title}</h3>
              </div>
            </div>
            <div class="p-6">
              <p class="text-paragraph mb-6 leading-relaxed text-sm">{service.description}</p>
              <ul class="space-y-2.5">
                {service.features.map((feature) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
